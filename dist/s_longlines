#! /bin/sh

# Check for long lines
t=__wt.$$
trap 'rm -f $t; exit 0' 0 1 2 3 13 15

l=`(sed -e '/^[a-z]/! d' -e 's,^,../,' filelist ;
    ls  ../examples/c/*.c \
	../src/include/*.[hi] \
	../src/include/*.in \
	../test/*/*.[ch]) | egrep -v 'support/stat\.c$'`

for f in $l ; do
	expand -t8 < $f | awk -- \
		"{if(length(\$0) > 80) printf(\"%s:%d\\n\", \"$f\", NR)}"
done
