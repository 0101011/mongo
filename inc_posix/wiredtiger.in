/*******************************************
 * Application thread-of-control information
 *******************************************/
struct __wt_toc {
	/*
	 * Enclosing environment, set when the WT_TOC is created (which
	 * implies that threads-of-control are confined to an environment).
	 */
	ENV	*env;			/* Operation environment */

	/*
	 * Explicit representations of structures from queue.h.
	 * TAILQ_ENTRY(__wt_toc) q;
	 */
	struct {
		struct __wt_toc *tqe_next;
		struct __wt_toc **tqe_prev;
	} q;				/* Linked list of WT_TOCs */

	/*
	 * We pass around WT_TOCs internally in the Btree, (rather than a DB),
	 * because the DB's are free-threaded, and the WT_TOCs are per-thread.
	 * WT_TOCs always reference a DB handle, though.
	 */
#define	WT_TOC_INIT(toc, _db) do {					\
	(toc)->db = (_db);						\
} while (0)
#define	WT_TOC_CLEAR(toc) do {						\
	(toc)->db = NULL;						\
} while (0)

	DB	 *db;			/* Current database */
	DBT	  key, data;		/* Returned key/data pairs */

	/*
	 * WT_TOCs make requests of server threads running in the environment.
	 * This is done by calling a supporting function that takes the toc as
	 * an argument.   No error can be returned to the server thread, the
	 * WT_TOC has to somehow pass that information back to itself.
	 */
#define	WT_TOC_REQUEST(toc, f, args) do {				\
	(toc)->request_args = args;					\
	if (F_ISSET(toc, WT_SINGLE_THREADED))				\
		f(toc);							\
	else {								\
		(toc)->request = f;					\
		WT_FLUSH_MEMORY;					\
		while ((toc)->request != NULL)				\
			__wt_yield();					\
	}								\
} while (0)
#define	WT_TOC_REQUEST_COMPLETE(toc) do {				\
	(toc)->request = NULL;						\
	WT_FLUSH_MEMORY;						\
} while (0)
	void (*request)(WT_TOC *);
	void *request_args;

	u_int32_t flags;

	/*
	 * DO NOT EDIT: automatically built by dist/api.py.
	 * WT_TOC methods: BEGIN
	 */
	int (*close)(
	    WT_TOC *, u_int32_t );
	/*
	 * WT_TOC methods: END
	 * DO NOT EDIT: automatically built by dist/api.py.
	 */
};

